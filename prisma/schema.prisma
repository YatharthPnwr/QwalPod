generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UploadStatus {
  PENDING
  COMPLETED
}

model Recordings {
  id                  String  @id @default(uuid())
  meetingId           String
  userId              String
  audioChunkFileKey   String?
  videoChunkFileKey   String?
  screenShareChunkKey String?
  thumbnailFileKey    String?
}

//New table to store the filekeys of chunks of audio, video and screenshare
model AudioChunksFilekeys {
  id                String @id @default(uuid())
  userId            String
  MeetingId         String
  AudioChunkFileKey String

  @@unique([MeetingId, AudioChunkFileKey])
}

model VideoChunksFilekeys {
  id                String @id @default(uuid())
  userId            String
  MeetingId         String
  VideoChunkFileKey String

  @@unique([MeetingId, VideoChunkFileKey])
}

model ScreenShareChunksFilekeys {
  id                      String @id @default(uuid())
  userId                  String
  MeetingId               String
  ScreenShareChunkFileKey String

  @@unique([MeetingId, ScreenShareChunkFileKey])
}

